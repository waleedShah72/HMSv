@using HMSv.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('../../Content/party/images/bg-01.jpg');">
        <div class="wrap-login100">
            <form action="@Url.Action("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl })" method="post" role="form" class="login100-form validate-form">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger validate-input" })
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Log in
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter email">
                    <input id="email" class="input100" type="text" name="email" placeholder="Email">
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "focus-input100" })
                    @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>

                <div class="contact100-form-checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe,new {@class="input-checkbox100",@type="checkbox" })
                    @Html.LabelFor(m => m.RememberMe,new {@class="label-checkbox100" })
                    @*<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                    <label class="label-checkbox100" for="ckb1">
                        Remember me
                    </label>*@
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt1" href="@Url.Action("Register","Account")">
                        Register as a new user
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

