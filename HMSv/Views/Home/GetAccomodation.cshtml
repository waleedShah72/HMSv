@model HMSv.ViewModels.AccomodationViewModels
@{
    ViewBag.Title = "Accomodations";
}

<aside id="fourapple-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(../../Content/Images/header/img_bg_2.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-md-offset-3 slider-text">
                            <div class="slider-text-inner slider-text-inner2 text-center">
                                <h2>Choose our Best</h2>
                                <h1>Rooms &amp; Suites</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
@if (Model!=null && Model.AccomodationPackages!=null && Model.AccomodationPackages.Count>0) {
<div id="fourapple-rooms" class="fourapple-light-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-lg-12">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Select Accomodation Packages
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    @foreach (var item in Model.AccomodationPackages)
                    {
                        <li class="@( Model.SelectedAccomodationPackageID == item.ID ? "active" : string.Empty)">
                            <a href="@Url.Action("GetAccomodation","Home", new { accomodationTypeID=Model.AccomodationType.ID,accomodationPackageID=item.ID })" class="dropdown-item">
                                @item.Name
                            </a>
                        </li>
}
                </ul>
            </div>
</div>
        </div>
        <div class="row">
            @if (Model.Accomodations != null && Model.Accomodations.Count > 0)
            {
            foreach (var item in Model.Accomodations)
            {
                <div class="col-md-4 room-wrap animate-box">
                    <a href="images/room-1.jpg" class="room image-popup-link" style="background-image: url(images/room-1.jpg);"></a>
                    <div class="desc text-center">
                        <span class="rate-star"><i class="icon-star-full full"></i><i class="icon-star-full full"></i><i class="icon-star-full full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i></span>
                        <h3><a href="rooms-suites.html">@item.Name</a></h3>
                        <p class="price">
                            <span class="currency">$</span>
                            <span class="price-room">@item.AccomodationPackage.FeePerNight</span>
                            <span class="per">/ per night</span>
                        </p>
                        <ul>
                            <li><i class="icon-check"></i> No of Rooms: @item.AccomodationPackage.NoOfRooms</li>
                            <li><i class="icon-check"></i> Breakfast included</li>
                            <li><i class="icon-check"></i> Price does not include VAT &amp; services fee</li>
                        </ul>
                        <p><a class="btn btn-primary">Book now!</a></p>
                    </div>
                </div>
}
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No Accomodations Found!
                </div> 
            }
        </div>
    </div>
</div>
}
