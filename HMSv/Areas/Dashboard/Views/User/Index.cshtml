@model HMSv.Areas.Dashboard.ViewModels.UsersListingModel
@{
    ViewBag.Title = "Index";
}
<div class="row mb-3">
    <div class="col col-lg-12">
        <h2>Users</h2>
    </div>
</div>
<div class="row mb-3">
    <div class="col col-lg-12">
        <form id="searchFrm">
            <div class="input-group">
                <input type="text" id="searchTxt" class="form-control" placeholder="Search.." aria-label="Search">
                @if (Model.UserRoles != null && Model.UserRoles.Count > 0)
                {
                    <select id="RoleID" class="form-control">
                        <option value="">Select Role</option>
                        @foreach (var item in Model.UserRoles)
                        {
                            <option value="@item.Id">@item.Name</option>
}
                    </select>}
                <div class="invalid-feedback">Please fill out this field.</div>
                <div class="input-group-append">
                    <button id="searchBtn" data-href="@Url.Action("Listing","User")" class="btn btn-sm btn-outline-success" type="button"><i class="fas fa-search mr-1"></i>Search</button>
                    <button id="resetBtn" data-href="@Url.Action("Listing","User")" class="btn btn-sm btn-outline-dark" type="button"><i class="fas fa-undo-alt mr-1"></i>Reset</button>
                    <button data-href="@Url.Action("Create","User")" class="btn btn-sm btn-outline-primary actionBtn" type="button" data-toggle="modal" data-target="#actionModal">
                        <i class="fas fa-plus mr-1"></i>Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col col-lg-12">
        <div id="tableContainer">
            @{ Html.RenderAction("Listing"); }
        </div>
    </div>
</div>

<!-- Toasts -->
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
    <div id="toast" class="toast" data-delay="3000"  style="position: absolute; top: 0; right: 0; z-index:3">
        @*<div class="toast-header">
            <img src="..." class="rounded mr-2" alt="...">
            <strong class="mr-auto">Bootstrap</strong>
            <small>11 mins ago</small>

        </div>*@
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="toast-body text-white">
            <span id="err"></span><br />
            <span id="errors"></span>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">

    </div>
</div>

<script>
    $("#searchBtn").click(function () {
        var searchVal = $("#searchTxt").val();
        var searchID = $("#RoleID").val();
        $.ajax({
            url: $(this).attr("data-href"),
            data: {
                search: searchVal,
                roleID: searchID
            }
        })
        .done(function (response) {
            $("#tableContainer").html(response);
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        })

    });
    $("#resetBtn").click(function () {
        var searchVal = "";

        $.ajax({
            url: $(this).attr("data-href"),
            data: {
                search: searchVal
            }
        })
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#searchTxt").val("");
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        })

    });
</script>



